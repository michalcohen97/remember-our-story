<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/heroism_intro_image"
        android:layout_width="411dp"
        android:layout_height="231dp"
        android:src="@drawable/logo_remember"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.032" />

    <TextView
        android:layout_width="364dp"
        android:layout_height="292dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/rubik"
        android:gravity="center"
        android:text="הצטרפו אלינו למסע להנצחת גיבורי השואה.\nהתחילו את המסע בבחירת הגיבור בעמוד הבא, לאחר מכן תוכלו להפוך את הסיפור לשלכם.\nעקבו אחרי ההוראות והעלו את הסטורי לאינסטגרם לפי השלבים,\nוכמובן אל תשכחו לתייג\n @Brave_together__makechange "
        android:textColor="#000000"
        android:textColorHighlight="#FFEB3B"
        android:textColorLink="#FFC107"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/startBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heroism_intro_image"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="20dp" />

    <Button
        android:id="@+id/startBtn"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="132dp"
        android:layout_height="70dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/rubik_bold"
        android:text="בואו נתחיל"
        android:textDirection="rtl"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heroism_intro_image"
        app:layout_constraintVertical_bias="0.951" />

    <TextView
        android:id="@+id/mustHaveInstaTxt"
        android:layout_width="408dp"
        android:layout_height="44dp"
        android:fontFamily="@font/rubik"
        android:gravity="center"
        android:text=" אנא וודאו כי תוכנת האינסטגרם מותקנת במכשירכם"
        android:textColor="#000000"
        android:textColorHighlight="#FFEB3B"
        android:textColorLink="#FFC107"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heroism_intro_image"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>